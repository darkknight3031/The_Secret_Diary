<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Sign_in">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="182dp"
        android:layout_height="109dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wolff" />


    <LinearLayout
        android:id="@+id/Signin_btn2"
        android:layout_width="266dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_rounded2"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:layout_width="47dp"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical"
            android:maxWidth="35dp"
            android:maxHeight="35dp"
            android:scaleType="centerInside"
            android:src="@drawable/googleg_standard_color_18"
            tools:srcCompat="@drawable/glog" />

        <TextView
            android:id="@+id/tvSearchCaption"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingRight="30dp"
            android:text="LOG IN WITH GOOGLE"
            android:textAlignment="center"
            android:textColor="#767676"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="285dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:text="By clicking Log In, you agree to our Terms. Learn how we  process your data in our Privacy Policy and Cookie  Policy. "
        android:textAlignment="center"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="GET STARTED !"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>